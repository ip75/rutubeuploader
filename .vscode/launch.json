    "version": "0.2.0",
    "configurations": [
        {
            "name": "generate token: first",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}",
            "args": ["token", "--user", "user", "--password", "123"]
        },
        {
            "name": "generate token: regenerate",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}",
            "args": ["token", "--user", "user", "--password", "123", "--regenerate"]
        },
        {
            "name": "upload video: input file",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}",
            "args": ["upload", "--wait", "--tasks", "3", "--token", "token-expired.json", "video_list.json"]
        }
    ]
}